@using Web.Areas.chemistry_Vafa_admin.ViewModels.Students
@model StudentsIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Students</h4>
                        <a class="btn btn-main" asp-action="create" asp-controller="students" asp-area="chemistry-Vafa-admin">Create Student</a>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Full Name</th>
                                        <th>Profession</th>
                                        <th>Point</th>
                                        <th>University</th>
                                        <th>CreateAt</th>
                                        <th>ModifiedAt</th>
                                        <th>Photo</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var student in Model.Students)
                                    {
                                        <tr>
                                            <td>@student.Id</td>
                                            <td>@student.FullName</td>
                                            <td>@student.Profession</td>
                                            <td>@student.Point</td>
                                            <td>@student.University</td>
                                            <td>@student.CreateAt</td>
                                            <td>@student.ModifiedAt</td>
                                            <td>
                                                <img style="width:50px; height:70px" src="~/assets/media/@student.Photo?" alt="student" />
                                            </td>
                                            <td>
                                                <a class="btn btn-danger" asp-action="GetDelete" asp-controller="students" asp-area="chemistry-Vafa-admin" asp-route-id="@student.Id">Delete</a>
                                                <a class="btn btn-primary" asp-action="update" asp-controller="students" asp-area="chemistry-Vafa-admin" asp-route-id="@student.Id">Update</a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>