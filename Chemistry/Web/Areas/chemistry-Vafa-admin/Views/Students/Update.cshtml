@using Web.Areas.chemistry_Vafa_admin.ViewModels.Students
@model StudentsUpdateVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Update Students
                        </p>
                        <form enctype="multipart/form-data" method="post" asp-action="update" asp-controller="students" asp-area="chemistry-Vafa-admin" class="forms-sample">
                            <div class="form-group">
                                <label asp-for="FullName">FullName</label>
                                <input class="form-control" asp-for="FullName">
                                <span asp-validation-for="FullName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Point">Point</label>
                                <input type="number" class="form-control" asp-for="Point">
                                <span asp-validation-for="Point"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="University">University</label>
                                <input class="form-control" asp-for="University">
                                <span asp-validation-for="University"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Profession">Profession</label>
                                <input class="form-control" asp-for="Profession">
                                <span asp-validation-for="Profession"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-light" href="../">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>