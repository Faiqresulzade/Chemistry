@using Web.Areas.chemistry_Vafa_admin.ViewModels.PersonInfo
@model PersonInfoUpdateVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Update Person Info
                        </p>
                        <form asp-validatio-summary="ModelOnly" enctype="multipart/form-data" method="post" asp-action="update" asp-controller="personinfo" asp-area="chemistry-Vafa-admin" class="forms-sample">
                            @*<div asp-validation-summary="ModelOnly"></div>*@
                            <div class="form-group">
                                <label asp-for="FullName">FullName</label>
                                <input required class="form-control" asp-for="FullName">
                                <span asp-validation-for="FullName"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Info">Info</label>
                                <textarea  class="form-control" asp-for="Info"> </textarea>
                                <span asp-validation-for="Info"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Photo">Photo</label>
                                <input class="form-control" asp-for="Photo">
                                <span asp-validation-for="Photo"></span>
                            </div>
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <a class="btn btn-light" href="../">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#Info'))
        .then(editor => {
            console.log(editor);
        })
        .catch(error => {
            console.error(error);
        });
</script>