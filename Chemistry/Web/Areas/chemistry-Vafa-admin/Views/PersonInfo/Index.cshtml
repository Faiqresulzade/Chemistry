@using Web.Areas.chemistry_Vafa_admin.ViewModels.PersonInfo
@model PersonInfoIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Person Info</h4>

                        @if (Model.personInfo == null)
                        {
                                <a class="btn btn-main" asp-action="create" asp-controller="personinfo" asp-area="chemistry-Vafa-admin">Create Person Info</a>

                        }
                        else
                        {
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Full Name</th>
                                                <th>Info</th>
                                                <th>CreateAt</th>
                                                <th>ModifiedAt</th>
                                                <th>Photo</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.personInfo.Id</td>
                                                <td>@Model.personInfo.Title</td>
                                               <td>@Html.Raw(@Model.personInfo.Text)</td>
                                                <td>@Model.personInfo.CreateAt</td>
                                                <td>@Model.personInfo.ModifiedAt</td>
                                                <td>
                                                <img style="width:50px; height:70px" src="~/assets/media/@Model.personInfo.Photo?" alt="@Model.personInfo.Title" />
                                                </td>
                                                <td>
                                                <a class="btn btn-danger" asp-action="getDelete" asp-controller="personinfo" asp-area="chemistry-Vafa-admin" asp-route-id="@Model.personInfo.Id">Delete</a>
                                                    <a class="btn btn-primary" asp-action="update" asp-controller="personinfo" asp-area="chemistry-Vafa-admin" asp-route-id="@Model.personInfo.Id">Update</a>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>