@using Web.Areas.chemistry_Vafa_admin.ViewModels.Message
@model MessageIndexVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Message</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Description</th>
                                        <th>CreateAt</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var message in Model.Messages)
                                    {
                                        <tr>
                                            <td>@message.Id</td>
                                            <td>@message.Name</td>
                                            <td>@message.Email</td>
                                            <td>@message.Description</td>
                                            <td>@message.CreateAt</td>
                                            <td>
                                                <a class="btn btn-danger" asp-action="Delete" asp-controller="Message" asp-area="chemistry-Vafa-admin" asp-route-id="@message.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>