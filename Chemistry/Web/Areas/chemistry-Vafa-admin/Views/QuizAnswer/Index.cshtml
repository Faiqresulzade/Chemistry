@using Core.Entities;
@model List<QuizAnswer>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Quizzes</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Wrong Count</th>
                                        <th>Correct Count</th>
                                        <th>CreateAt</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var quizAnswer in Model)
                                    {
                                        <tr>
                                            <td>@quizAnswer.Id</td>
                                            <td>@quizAnswer.UserName</td>
                                            <td>@quizAnswer.WrongCount</td>
                                            <td>@quizAnswer.CorrectCount</td>
                                            <td>@quizAnswer.CreateAt.ToShortDateString()/  @quizAnswer.CreateAt.ToShortTimeString()</td>
                                            <td>
                                                <a class="btn btn-danger" asp-action="Delete" asp-controller="quizanswer" asp-area="chemistry-Vafa-admin" asp-route-id="@quizAnswer.Id">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>