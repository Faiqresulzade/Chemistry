@using Core.Entities
@model Resource
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">

                        <p class="card-description">
                            Delete Resource
                        </p>
                        <span>Id: </span>
                        <span>@Model.Id</span>
                        <br>
                        <span>Full Name: </span>
                        <span>@Model.Title</span>
                    </div>
                    <form method="post" asp-action="Delete" asp-controller="resource" asp-area="chemistry-Vafa-admin" asp-route-id="@Model.Id">
                        <button class="btn btn-dangers">Delete</button>
                        <a class="btn btn-light" href="../">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>