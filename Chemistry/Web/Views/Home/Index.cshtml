    @if (@Model.Curseİnfo != null)
    {
        <section class="incrementSection">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-3 col-md-6">
                        <article>
                            <p class="counter" title="Məzunlarımız" data-target="@Model.Curseİnfo.Graduates"><i class="fas fa-plus"></i></p>
                            <!--! title hisse adminden gelecek -->
                            <h4 title="">Məzunlarımız</h4>
                        </article>
                    </div>
                    <div class="col-12 col-lg-3 col-md-6">
                        <article>
                            <p class="counter" title="Sınağlar" data-target="@Model.Curseİnfo.Test"> <i class="fas fa-plus"></i></p>
                            <!--! title hisse adminden gelecek -->

                            <h4 title="">Sınağlar</h4>
                        </article>
                    </div>
                    <div class="col-12 col-lg-3 col-md-6">
                        <article>
                            <p class="counter" title="Video dərslər" data-target="@Model.Curseİnfo.VideoLesson"><i class="fas fa-plus"></i></p>
                            <!--! title hisse adminden gelecek -->
                            <h4 title="">Video dərslər</h4>
                        </article>
                    </div>
                    <div class="col-12 col-lg-3 col-md-6">
                        <article>
                            <p class="counter" title="Təcrübə" data-target="@Model.Curseİnfo.Experience"><i class="fas fa-plus"></i></p>
                            <!--! title hisse adminden gelecek -->
                            <h4>Təcrübə</h4>
                        </article>
                    </div>
                </div>
            </div>
        </section>
    }

    @if (Model.News.Count != 0)
    {

        <section id="news" class="newsSection">
            <div class="container">
                <div class="section-heading">
                    <h2 title="news">Xəbərlər</h2>
                </div>
                <div class="row">
                    @foreach (var news in Model.News)
                    {
                        <div class="col-12  col-lg-12 col-md-6">
                            <div class="newsCard">
                                <div class="row">
                                    <div class="col-12 col-lg-3">
                                        <div class="image">
                                            <!-- !alt yazisi adminden gelecek -->
                                            <img src="~/assets/media/@news.Photo" alt="@news.Title">
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-9">
                                        <ul>
                                            <li>
                                                <span class="category">@news.Category</span>
                                                <!--! title hisse adminden gelecek -->
                                                <h4 title="">@news.Title</h4>
                                            </li>
                                            <li>
                                                <p>Date</p>
                                                <h6>@news.CreateAt.ToShortDateString()/  @news.CreateAt.ToShortTimeString()</h6>
                                            </li>
                                        </ul>
                                        <a asp-action="Details" asp-controller="news" asp-route-id="@news.Id">
                                            <i class="fa fa-angle-right"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="viewMore">
                    <a asp-action="index" asp-controller="news">Daha Çox <i class="fas fa-chevron-right"></i></a>
                </div>
            </div>
        </section>

    }

    <section id="contact-us" class="contact-us">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-6">
                    <article class="content">
                        <h6 id="contact-us" title="contact us">Əlaqə</h6>
                        <h2 title="contact">Təklif və İradlarınızı bizə yazın</h2>
                    </article>
                </div>
                <div class="col-12 col-lg-6">
                    <div class="contactForm">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="inputForm">
                                <input asp-for="messageVM.Name" type="text" name="Name" placeholder="Adınız...">

                            </div>
                            <span style="color:red" asp-validation-for="messageVM.Name"></span>
                            <div class="inputForm">
                                <input asp-for="messageVM.Email" type="email" name="Email" placeholder="E-mail...">

                            </div>
                            <span style="color:red" asp-validation-for="messageVM.Email"></span>
                            <div class="inputForm">
                                <textarea asp-for="messageVM.Message" name="Message" placeholder="Mesajınız..."></textarea>

                            </div>
                            <span style="color:red" asp-validation-for="messageVM.Email"></span>
                            <div class="inputForm">
                                <button type="submit">
                                    Mesajınızı
                                    göndərin

                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>






