@using Web.ViewModels.Home
@model HomeIndexVM

@if (Model.MesageSended != null)
{
    <div id="Alert" style="z-index:11111;text-align:center" class="alert alert-success" role="alert">
        Mesaj uğurla göndərildi
    </div>

    <style>
        .main-section {
            padding: 0 !important;
        }
    </style>
}


<div id="preloader"></div>
<button class="backToTop" type="button">
    <i class="fas fa-level-up-alt"></i>
</button>
<main class="main-section">
    @if (Model.HomeSliders.Count != 0)
    {
        <section class="hero-slider">
            <div class="container">
                <div class="slider-area owl-carousel owl-theme">

                    @{
                        foreach (var slider in Model.HomeSliders)
                        {
                            <div class="item">
                                <figure class="slider-image-area">
                                    <img src="~/assets/media/@slider.BackRoundImage" alt="@slider.Category" class="imagae-slider">
                                </figure>
                                <div class="slider-content">
                                    <div class="row">
                                        <div class="col-12">
                                            <article>
                                                <div class="swiperCategory">
                                                    <span> @slider.Category</span>
                                                </div>
                                                <h3 title="name">@slider.Title</h3>
                                                <div class="clamp-content">
                                                    <p>
                                                        @slider.Description
                                                    </p>
                                                </div>
                                            </article>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </section>
    }

    @if (Model.GetPersonInfo != null)
    {
        <section id="about-us" class="aboutUs">
            <div class="container">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <div class="teacherImage">
                            <img src="~/assets/media/@Model.GetPersonInfo.Photo" alt="@Model.GetPersonInfo.Title">
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="infoTeacher">
                            <h4 id="information" title="Vefa Kerimli">@Model.GetPersonInfo.Title</h4>
                            <article>
                                <p>
                                    @Html.Raw(@Model.GetPersonInfo.Text)
                                </p>
                            </article>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }

    @if (Model.Resources.Count != 0)
    {
        <section class="quizPage">
            <div class="container">
                <div class="row">

                    @foreach (var resource in Model.Resources)
                    {
                        <div class="quiz-card col-xl-3  col-12 col-lg-3 col-md-6" data-name="MIQ">
                            <div class="all-quiz">
                                <div class="quiz">
                                    <div class="quizImage">
                                        <img src="~/assets/media/@resource.Image" alt="@resource.Title">
                                    </div>
                                    @*   @if (resource.I.İsPaid)
                            {
                            <span>Ödənişlidir</span>
                            } *@
                                    <article>
                                        <h4 class="quizKind" title="quiz kind">@resource.Title</h4>
                                        <div class="detailButton">

                                            @if (resource.Pdf != null)
                                            {
                                                <a href="~/assets/media/@resource.Pdf" target="_blank">Ətraflı bax</a>
                                            }
                                            else
                                            {
                                                <a href="@resource.Link" target="_blank">Ətraflı bax</a>
                                            }
                                        </div>
                                    </article>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </section>


