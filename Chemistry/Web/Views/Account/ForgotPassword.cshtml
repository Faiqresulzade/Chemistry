@{
    Layout = null;
    ViewBag.Title = "Forgot Password";
}

@using Web.ViewModels.Account;
@model AccountForgotPasswordVM;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="kimya, kimya dərsləri,kimya sinagi,miq,abituriyent,kimya miq,kimya suallari,vəfa kerimli,kimya dersleri,vefa kerimli,agma,muellim,məllim,müəllim">
    <meta name="keywords" content="kimya, kimya dərsləri,kimya sinagi,miq,abituriyent,kimya miq,kimya suallari,vəfa kerimli,kimya dersleri,vefa kerimli,agma,muellim,məllim,müəllim">
    <title>Email ile dəyiş</title>
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/style/css/style.css">
</head>
<body>
    <div class="email">
        <div class="container">
            <div class="wrap-email">
                <div class="row">
                    <div class="col-12 col-lg-8">
                        <div class="email-picture">
                            <img src="~/assets/media/chemistryset_dribbble.gif" alt="Forgot">
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <form asp-action="ForgotPassword" asp-controller="account" method="post" class="email-form validate-form">
                            <h4 class="email-form-title" title="Üzv girişi">Email ilə hesabımı tap</h4>
                            <div class="validation-input">
                                <div class="wrap-input validate-input">
                                    <input asp-for="@Model.Email" class="input" type="email" name="email" id="email"
                                           placeholder="e-mail hesabınız...">
                                    <span class="focus-input"></span>
                                    <span class="symbol-input">
                                        <i class="fa fa-envelope"></i>
                                    </span>
                                </div>
                                <span style="font-size:14px;color:red;" asp-validation-for="@Model.Email"></span>
                            </div>
                            <div class="email-form-btn">
                                <button id="email-form" class="email-button" type="submit">Gönder</button>
                            </div>
                        </form>
                        <div class="home-page">
                            <a asp-action="index" asp-controller="home">
                                Əsas səhifə
                                <i class="fa fa-long-arrow-right "></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/javascript/jquery.js"></script>
    <script src="~/javascript/bootstrap.bundle.min.js"></script>
    <script src="~/javascript/bootstrap.min.js"></script>
    <script src="~/javascript/fontawesome.js"></script>
    <script src="~/javascript/logregister.js"></script>
</body>
</html>